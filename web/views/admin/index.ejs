<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>RPI-EnvironmentalMonitoring</title>
    <link rel="icon" type="image/png" href="/files/img/favicon.ico">
    <link href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.css" rel="stylesheet">
    <style>
        .view {
            margin-top: 20px;
            margin-bottom: 20px;
        }
    </style>
    <script src="https://img.hcharts.cn/jquery/jquery-1.8.3.min.js"></script>
    <script src="/files/js/hcharts/highstock.js"></script>
    <script src="/files/js/hcharts/exporting.js"></script>
    <script src="/files/js/hcharts/export-data.js"></script>
    <script src="/files/js/hcharts/dark-unica.js"></script>
</head>
<body>
<div class="container">
    <div class="row">
        <h3 style="text-align: center">This is the dynamic diagram</h3>
        <div class="col-md-12">
            <div id="dynamic" style="min-width:400px;height:400px"></div>
            <div>
                <div class="view">
                    <a href="http://localhost:8080/admin/act=reset" class="btn btn-danger btn-block" onclick="return confirm('Are you sure reset the table?')">Reset Table</a>
                </div>
            </div>
        </div>

        <div class="col-md-12">
            <h3 style="text-align: center">This is data</h3>
            <table class="table table-condensed table-bordered">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Time</th>
                    <th>Humidity</th>
                    <th>temperature</th>
                    <th>light</th>
                </tr>
                </thead>
                <tbody>
                <% for (var i = 0;i < myData.length;i++) { %>

                <% if(i % 2 == 0) { %>

                <tr class="success">
                    <td><%- myData[i].ID %></td>
                    <td><%- myData[i].time %></td>
                    <td><%- myData[i].humidity %></td>
                    <td><%- myData[i].temperature %></td>
                    <td><%- myData[i].light %></td>
                </tr>
                <% } else { %>
                <tr>
                    <td><%- myData[i].ID %></td>
                    <td><%- myData[i].time %></td>
                    <td><%- myData[i].humidity %></td>
                    <td><%- myData[i].temperature %></td>
                    <td><%- myData[i].light %></td>
                </tr>

                <% } %>

                <% } %>

                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    $(function () {
        var seriesOptions = [],
            seriesCounter = 0,
            names = ['humidity','temperature','light'],
            // create the chart when all data is loaded
            createChart = function () {
                $('#dynamic').highcharts('StockChart', {
                    rangeSelector: {
                        selected: 4
                    },
                    yAxis: {
                        labels: {
                            formatter: function () {
                                return (this.value > 0 ? ' + ' : '') + this.value + '%';
                            }
                        },
                        plotLines: [{
                            value: 0,
                            width: 2,
                            color: 'silver'
                        }]
                    },
                    plotOptions: {
                        series: {
                            compare: 'percent'
                        }
                    },
                    tooltip: {
                        pointFormat: '<span style="color:{series.color}">{series.name}</span>: <b>{point.y}</b> ({point.change}%)<br/>',
                        valueDecimals: 2
                    },
                    series: seriesOptions
                });
            };
        $.each(names, function (i, name) {
            $.getJSON('http://localhost:8080/json/' + name.toLowerCase(),function (data) {
                seriesOptions[i] = {
                    name: name,
                    data: data
                };
                // As we're loading the data asynchronously, we don't know what order it will arrive. So
                // we keep a counter and create the chart when all the data is loaded.
                seriesCounter += 1;
                if (seriesCounter === names.length) {
                    createChart();
                }
            });
        });
    });
</script>
</body>
</html>